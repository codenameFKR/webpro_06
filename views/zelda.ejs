<!Doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title>ゼルダ</title>
</head>

<body>
    <h2>ゼルダのソフト一覧</h2>
    <table>
        <% let number=0 %>
            <% for( let row of data ) { %>
                <!--row:順番に取り出した中身を入れている-->
                <tr>
                    <td>
                        <a href="/zelda/<%= number %>">
                            <%= row.title %>
                        </a>
                    </td>
                </tr>
                <% number +=1 %>
                    <% } %>
    </table>
    <a href="/zelda/create">
        <button>新規登録</button>
    </a>
</body>

</html>